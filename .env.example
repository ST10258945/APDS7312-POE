# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=1d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/your_database_name?schema=public

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Session Configuration
SESSION_TTL=30m

# Customer registration toggle (false = disabled in all envs, true = enabled)
# Leave unset or false for production safety; set true to enable
NEXT_PUBLIC_ALLOW_REGISTRATION=false
