# Database Configuration (MongoDB)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here
JWT_ISSUER=bank-portal
JWT_ALGORITHM=HS256

# Token Expiration
ACTION_TOKEN_EXPIRY=300

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_TTL=30m

# Customer registration toggle (false = disabled in all envs, true = enabled)
# Leave unset or false for production safety; set true to enable
ALLOW_REGISTRATION=false
NEXT_PUBLIC_ALLOW_REGISTRATION=false

# Rate Limiting (development defaults)
# Set to true to disable all in-process rate limits (useful for demos/marking)
DISABLE_RATE_LIMIT=true
# Max requests per window for in-process limiter
RATE_LIMIT_MAX=3
# Window length in milliseconds
RATE_LIMIT_WINDOW_MS=60000
