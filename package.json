{
  "name": "globewire",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:https": "local-ssl-proxy --source 3443 --target 3001 --cert certs/localhost-cert.pem --key certs/localhost-key.pem",
    "build": "next build",
    "start": "next start -p 3000",
    "start:https": "NODE_ENV=production node server.js",
    "generate-certs": "powershell -ExecutionPolicy Bypass -File generate-ssl.ps1",
    "lint": "eslint .",
    "postinstall": "prisma generate",
    "migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "test": "jest",
    "test:ci": "jest --coverage --runInBand",
    "sonar:ci": "node scripts/sonar.js"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-jest": "^30.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "local-ssl-proxy": "^2.0.5",
    "prisma": "^6.16.3",
    "sonarqube-scanner": "^3.1.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
